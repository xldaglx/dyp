<p id="notice"><%= notice %></p>

<h1>Behaviors</h1>

<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>User</th>
      <th>Deal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @behaviors.each do |behavior| %>
      <tr>
        <td><%= behavior.grade %></td>
        <td><%= behavior.user %></td>
        <td><%= behavior.deal %></td>
        <td><%= link_to 'Show', behavior %></td>
        <td><%= link_to 'Edit', edit_behavior_path(behavior) %></td>
        <td><%= link_to 'Destroy', behavior, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

