<% set_meta_tags canonical: "http://www.descuentosypromociones.com/todas-las-tiendas" %>
<% set_meta_tags description: "Encuentra los mejores descuentos y promociones en las tiendas de méxico, aquí podrás encontrar a las tiendas con más promociones." %>

<div class="row deal-detail">
	<h1 style="padding: 0px 15px;margin-top: 0px;"><%= title 'Tiendas' %></h1>
	<div class="container">
	    <div class="col-lg-9 deal-det">
		    <div class="list-group">
			  <% @stores.each do |store| %>
				  <a href="/descuentos-por-tienda/<%= store.id %>/<%= store.slug %>" class="list-group-item">
				    <h4 class="list-group-item-heading"><%= store.name %></h4>
				    <p class="list-group-item-text"><%= store.description %> <span class="badge"><%= store.deals.where('status = 1').count %></span></p>
				  </a>
			    <% end %>
			</div>
		</div>
		<div class="col-lg-3 banners">
		    <%= render 'banners/right_column.html.erb' %>
		</div>
	</div>
</div>