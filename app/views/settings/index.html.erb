<p id="notice"><%= notice %></p>
<div class="row deal-detail">
  <h1 style="padding: 0px 15px;margin-top: 0px;">Settings</h1>
  <div class="container">
      <div class="col-lg-12 deal-det">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="tabla-cat">Core</th>
              <th class="tabla-cat">Value</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @settings.each do |setting| %>
              <tr>
                <td class="tabla-cat"><%= setting.core %></td>
                <td class="tabla-cat"><%= setting.value %></td>
                <td class="tabla-edit"><span class="glyphicon glyphicon-eye-open"></span> <%= link_to 'Ver', setting %></td>
                <td class="tabla-edit"><span class="glyphicon glyphicon-pencil"></span> <%= link_to 'Editar', edit_setting_path(setting) %></td>
                <td class="tabla-edit"><span class="glyphicon glyphicon-trash"></span> <%= link_to 'Eliminar', setting, method: :delete, data: { confirm: 'Estás seguro de eliminar esta opción?' } %></td>
              </tr>
            <% end %>            
          </tbody>
          <tfoot>
            <tr>
              <td>
                <%= link_to 'Nuevo', new_setting_path, class:"btn-rojo" %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
  </div>
</div>