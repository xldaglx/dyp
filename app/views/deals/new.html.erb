		</div>
		<div class="col-md-2"></div>
	</div>
<script type="text/javascript">
jQuery(document).ready(function($) {
	var type = $('.nav-tabs li a').attr('href');
	if(type == "#online"){
		$('#fisica').html("");
		$("#online").html("<%= j (render 'form') %>");
		$("#deal_type_deal").val("1");
		$('#new_deal').validate({
		  rules: {
		  	'deal[link]': {
		      required: true,
          	  minlength:10,
          	  maxlength:500
		    },
		    'deal[title]': {
		      required: true,
          	  minlength:10,
          	  maxlength:255
		    },
		    'deal[category_id]': {
		      required: true
		    },
		    'deal[store_id]': {
		      required: true
		    },
		    'deal[type_deal]': {
		      required: true
		    }
		  }
		});
	}else{
		$('#online').html("");
		$("#fisica").html("<%= j (render 'formfisica') %>");
		$("#deal_type_deal").val("2");	
		$('#new_deal').validate({
		  rules: {
		    'deal[title]': {
		      required: true,
          	  minlength:10,
          	  maxlength:255
		    },
		    'deal[category_id]': {
		      required: true
		    },
		    'deal[store_id]': {
		      required: true
		    },
		    'deal[type_deal]': {
		      required: true
		    }
		  }
		});
	}
	$('.nav-tabs li a').click(function(event) {
		var type = $(this).attr('aria-controls');
		if(type == "online"){
			$('#fisica').html("");
			$("#online").html("<%= j (render 'form') %>");
			$("#deal_type_deal").val("1");
			$('#new_deal').validate({
			  rules: {
			  	'deal[link]': {
			      required: true,
	          	  minlength:10,
	          	  maxlength:500
			    },
			    'deal[title]': {
			      required: true,
	          	  minlength:10,
	          	  maxlength:255
			    },
			    'deal[category_id]': {
			      required: true
			    },
			    'deal[store_id]': {
			      required: true
			    },
			    'deal[type_deal]': {
			      required: true
			    }
			  }
			});
		}else{
			$('#online').html("");
			$("#fisica").html("<%= j (render 'formfisica') %>");
			$("#deal_type_deal").val("2");
			$('#new_deal').validate({
		  rules: {
		    'deal[title]': {
		      required: true,
          	  minlength:10,
          	  maxlength:500
		    },
		    'deal[category_id]': {
		      required: true
		    },
		    'deal[store_id]': {
		      required: true
		    },
		    'deal[type_deal]': {
		      required: true
		    }
		  }
			});
		}
	});
	$('#myTabs a').click(function (e) {
	  e.preventDefault()
	  $(this).tab('show')
	});
});
</script>