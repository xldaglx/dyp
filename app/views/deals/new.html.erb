<div class="row ">
	<div class="col-lg-8 col-lg-offset-2 white">
	<h1>Compartir promoción</h1>
	<!-- Nav tabs -->
	<ul class="nav nav-tabs" role="tablist">
		<li role="presentation" class="active"><a href="#online" aria-controls="online" role="tab" data-toggle="tab">Tienda en línea</a></li>
		<li role="presentation"><a href="#fisica" aria-controls="fisica" role="tab" data-toggle="tab">Tienda física</a></li>
	</ul>
	<!-- Tab panes -->
	<div class="tab-content">
		<div class="tab-pane active" id="online"></div>
		<div class="tab-pane" id="fisica"></div>
	</div>
	</div>
</div>
<script type="text/javascript">
jQuery(document).ready(function($) {
	var type = $('.nav-tabs li a').attr('href');
	if(type == "#online"){
		$('#fisica').html("");
		$("#online").html("<%= j (render 'form') %>");
		$("#deal_type_deal").val("1");
	}else{
		$('#online').html("");
		$("#fisica").html("<%= j (render 'formfisica') %>");
		$("#deal_type_deal").val("2");
	}
	$('.nav-tabs li a').click(function(event) {
		var type = $(this).attr('aria-controls');
		if(type == "online"){
			$('#fisica').html("");
			$("#online").html("<%= j (render 'form') %>");
			$("#deal_type_deal").val("1");
		}else{
			$('#online').html("");
			$("#fisica").html("<%= j (render 'formfisica') %>");
			$("#deal_type_deal").val("2");
		}
	});
	$('#new_deal').validate({
	  rules: {
	    'deal[title]': {
	      required: true
	    },
	    'deal[description]': {
	      required: true
	    },
	    'deal[price]': {
	      required: true
	    },
	    'deal[category_id]': {
	      required: true
	    },
	    'deal[type_deal]': {
	      required: true
	    }
	  }
	});
	$('#myTabs a').click(function (e) {
	  e.preventDefault()
	  $(this).tab('show')
	});
});
</script>