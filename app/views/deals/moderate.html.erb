<p id="notice"><%= notice %></p>

<h1>Deals</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Imagen</th>
      <th>Link</th>
      <th>Price</th>
      <th>Expiration</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.title %></td>
        <td><%= deal.description %></td>
        <td><%= deal.link %></td>
        <td><%= deal.price %></td>
        <td><%= deal.expiration %></td>
        <td><%= deal.user %></td>
        <td><%= image_tag deal.promoimage.url(:thumb) %></td>
        <td><%= link_to 'Show', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

