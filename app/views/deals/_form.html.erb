
<%= bootstrap_form_for @deal,  html: { multipart: true } do |f| %>
  <% if @deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul>
      <% deal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :link, label: "Enlace de la promoción", placeholder: "http://www.enlacealapromocion.com" %>
    <div id="scrapp-images" class="row"></div>  
    <%= f.text_field :title, label: "Título", placeholder: "Artículo o Promoción" %>
    <%= f.text_field :description %>
    <%= f.text_field :link %>
    <%= f.text_field :price %>
    <%= f.text_field :expiration %>
    <%= f.collection_select :category_id,  @categories, :id, :description, multiple: true, :prompt => "Please Select" %>
    <%= f.text_field :type_deal %>
    <%= f.hidden_field :imagen %>
    <%= f.submit %>

<% end %>
<script type="text/javascript">
  jQuery(document).ready(function($) {
    $('#deal_link').change(function(event) {   
      url_input = $(this).val();
      $.ajax({
        url:  "/image/scrapp",
        dataType: "json",
        data: {
           url_host: url_input
        },
        success: function(data) { 
          count=0;
          for (i in data.images) {
              $('#scrapp-images').append('<div class="col-xs-6"><img src="'+data.images[i]+'" class="img-responsive"></div>');
              if(count == 0){
                $('#deal_imagen').val(data.images[i]);                
              }
              count++;
          }
        }
      });
    });
  });
</script>