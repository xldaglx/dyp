<div class="row deal-detail">
  <h1 style="padding: 0px 15px;margin-top: 0px;">Categorías</h1>
  <div class="container">
      <div class="col-lg-12 deal-det">
        <table>
          <thead>
            <tr>
              <th>Descripción</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td class="tabla-cat"><%= category.description %></td>
                <td class="tabla-edit"><span class="glyphicon glyphicon-trash"></span> <%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Estás seguro de eliminar esta Categoría?' } %></td>
                <td class="tabla-edit"><span class="glyphicon glyphicon-pencil"></span> <%= link_to 'Editar', edit_category_path(category) %></td>
                <td class="tabla-edit"><span class="glyphicon glyphicon-eye-open"></span> <%= link_to 'Ver', category %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td>
                <%= link_to 'Agregar Categoría', new_category_path, class:"btn-rojo" %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
  </div>
</div>
