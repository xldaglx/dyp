<% set_meta_tags canonical: "http://www.descuentosypromociones.com/todas-las-categorias",
                 description: "Encuentra los mejores Descuentos y Promociones en las Mejores Tiendas de México, aquí podrás ver un listado de las categorías con más promociones." %>
<div class="row deal-detail">
	<h1 style="padding: 0px 15px;margin-top: 0px;"><% title 'Categorías' %></h1>
	<div class="container">
	    <div class="col-lg-9 deal-det">
	    	<div class="list-group">
			  <% @categories.each do |category| %>
				  <a href="/descuentos-por-categoria/<%= category.id %>/<%= category.slug %>" class="list-group-item">
				    <h4 class="list-group-item-heading"><%= category.name %></h4>
				    <p class="list-group-item-text"><%= category.description %> <span class="badge"><%= category.deals.where('status = 1').count %></span></p>
				  </a>
			    <% end %>
			</div>
	    </div>
	    <div class="col-lg-3 banners">
		    <%= render 'banners/right_column.html.erb' %>
		</div>
	</div>
</div>
