<style type="text/css">
  .campos_editar{
    margin-bottom: 15px;
  }
  .actions .btn-negro{
    padding: 0px !important;
    margin: 0px !important;
  }
</style>
<div class="row deal-detail">
    <div class="col-md-3"></div>
    <div class="col-md-6 deal-det new-promo">
      <h2>Editar <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="field campos_editar">
        <%= f.label :Correo_Electrónico %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="field campos_editar">
        <%= f.label :Nombre_de_Usuario %><br />
        <%= f.text_field :nickname, autofocus: true %>
      </div>
      <!--INICIA SUBIR IMAGEN 1 ESTE FUNCIONA-->
      <div class="campos_editar">
        <p><strong>Sube una imagen de perfil</strong></p>
        <%= f.file_field :avatar, label: "Sube tu imagen (opcional)" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <!--INICIA SUBIR IMAGEN 2 ESTE SE VE BIEN PERO NO FUNCIONA-->
      <div class="img-upload">
        <input type="file" name="file-1[]" id="file-1" class="inputfile inputfile-2" data-multiple-caption="{count} files selected" multiple />
        <label for="file-1"><span class="glyphicon glyphicon-cloud-upload"></span> <span>Sube una imagen</span></label>
        <!--%= f.file_field :promoimage, label: "Sube tu imagen" %-->
      </div>
      <!--TERMINA SUBIR IMAGEN-->
      <hr>
      <h2>Contraseña</h2>
      <div class="field campos_editar">
        <%= f.label :Contraseña %> <i>(Si no deseas cambiarlo, deja este campo vacío)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em>Mínimo <%= @minimum_password_length %> caractéres</em>
        <% end %>
      </div>
      <div class="field campos_editar">
        <%= f.label :Confirma_tu_Contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <div class="actions">
        <%= f.submit "Actualizar Datos", class: 'btn-negro' %>
      </div>
      <% end %>
      <!--h3>Cancel my account</h3>
      <p> <%= button_to "Cancelar mi Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p-->
      <div class="col-md-12 no-padding">
      <hr>
      <%= link_to "Regresar a Mi Cuenta", :back %>
      </div>
    </div>
    <div class="col-md-3"></div>
</div>
