<div class="col-md-12 no-padding-m">
	<div class="deal-deta">
		<div class="col-md-12 profile-header public-profile">
			<div class="col-md-5">
				<div class="col-md-6">
					<img src="/images/users/profile/profile.png" class="img-responsive">
				</div>
				<div class="col-md-6">
					<div class="usuario"><%= @user.nickname %></div>
					<div class="miembro">Miembro desde: <%= @user.created_at.strftime("%m/%d/%Y") %></div>
					<% if user_signed_in? %>
						<%= relationship(current_user.id, @user.id)  %>
					<% else %>
						<a class="btn-seguir login-account" data-toggle="modal" href="#login"><i class="fa fa-bell-o" aria-hidden="true"></i> Seguir</a>
					<% end %>
				</div>
			</div>
			<div class="col-md-12 visible-xs" style="height: 15px;"></div>
			<div class="col-md-7">
				<div class="col-md-6">
					<div class="col-xs-6 det-resumen">
						<div class="resumen">
							<div class="n-resumen">
								--
							</div>
							<div class="txt-resumen">
								Ranking
							</div>
						</div>
					</div>
					<div class="col-xs-6 det-resumen">
						<div class="resumen">
							<div class="n-resumen">
								<%=  @user.deals.count %>
							</div>
							<div class="txt-resumen">
								Promociones<br>Publicadas
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="col-xs-6 det-resumen">
						<div class="resumen">
							<div class="n-resumen">
								<%= @promoHot %>
							</div>
							<div class="txt-resumen">
								Promociones<br>HOT
							</div>
						</div>
					</div>
					<div class="col-xs-6 det-resumen">
						<div class="resumen">
							<div class="n-resumen">
								<%=  @user.relationships.count %>
							</div>
							<div class="txt-resumen">
								Seguidores
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-12">
			<div class="cont-public">
				<%= render "deals/deals" %>
			</div>
		</div>
	</div>
</div>
<% if user_signed_in? %>
<script type="text/javascript">
	jQuery(document).ready(function($) {
		$('.follow').click(function(event) {
			followed = <%= @user.id %>
			follower = <%= current_user.id %>
			 $.ajax({
		        url:  "/follow",
		        dataType: "json",
		        data: {
		           followed: followed,
		           follower: follower
		        },
		        success: function(data) { 
		        	console.log(data);		          
		        }
		      });
		});
		$('.unfollow').click(function(event) {
			follow = $(this).attr('idf');
			 $.ajax({
		        url:  "/unfollow",
		        dataType: "json",
		        data: {
		           follow: follow
		        },
		        success: function(data) { 
		        	console.log(data);		          
		        }
		      });
		});
	});
</script>
<% end %>