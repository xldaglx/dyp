<div class="row deal-detail">
  <div class="col-md-4"></div>
  <div class="col-md-4 deal-det-login">
    <div class="modal-header">
      <h4 class="titulo-modal">Iniciar Sesión</h4>
    </div>
    <div class="modal-body2-login">
        <div class="row bloque-facebook">
          <div class="col-xs-2 no-padding icono-face">
            <span class=""><i class="fa fa-facebook" aria-hidden="true"></i></span>
          </div>
          <div class="col-xs-10 no-padding">
            <%= link_to " Ingresar con Facebook", user_facebook_omniauth_authorize_path, class:"btn btn-facebook" %>
          </div>
        </div>
      </div>
      <div class="separador"></div>
      <div class="modal-body-login">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :Correo_Electrónico %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field password">
            <%= f.label :Contraseña %>
            <%= f.password_field :password, autocomplete: "off" %>
            <%= link_to "Olvidé mi contraseña", new_password_path(resource_name), class:"olvide-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Iniciar sesión", class:"btn btn-login" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field check-filter">
              <%= f.check_box :remember_me %>
              <%= f.label :Recordar_mi_sesión %>
            </div>
          <% end -%>

        <% end %>
        <!--%= render "users/shared/links" %-->
      </div>
      <div class="modal-footer">
       ¿Aún No tienes cuenta? <%= link_to "Crear una", new_registration_path(resource_name), class:"titulo-modal create-account" %>
      </div>
  </div>
  <div class="col-md-4"></div>
</div>